<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cltProviders"
    android:background="@drawable/border_view_elements"
    android:layout_width="200dp"
    android:layout_height="280dp"
    android:layout_marginStart="2dp"
    >

    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="185dp"
        android:layout_height="115dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNameProduct"
        android:layout_width="175dp"
        android:layout_height="25dp"
        android:layout_marginTop="144dp"
        android:fontFamily="@font/convergence"
        android:textSize="15sp"
        android:textColor="@color/letters"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPhone"
        android:layout_width="175dp"
        android:layout_height="25dp"
        android:layout_marginTop="176dp"
        android:fontFamily="@font/convergence"
        android:textSize="15sp"
        android:textColor="@color/letters"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMakeOrders"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginTop="216dp"
        android:backgroundTint="@color/color_Focused"
        android:drawableTint="@color/color_Focused"
        android:fontFamily="@font/convergence"
        android:text="@string/order"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>