<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cltProducts"
    android:background="@drawable/border_view_elements"
    android:layout_width="200dp"
    android:layout_height="280dp"
    android:layout_marginStart="2dp">

    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="185dp"
        android:layout_height="115dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNameProduct"
        android:layout_width="185dp"
        android:layout_height="24dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/convergence"
        android:textAlignment="center"
        android:textColor="@color/letters"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPhone"
        android:layout_width="185dp"
        android:layout_height="25dp"
        android:layout_marginTop="196dp"
        android:fontFamily="@font/convergence"
        android:textAlignment="center"
        android:textColor="@color/letters"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMakeOrders"
        android:layout_width="83dp"
        android:layout_height="35dp"
        android:layout_marginTop="232dp"
        android:background="@drawable/border_rectangle_button"
        android:backgroundTint="@color/color_Focused"
        android:drawableTint="@color/color_Focused"
        android:fontFamily="@font/convergence"
        android:text="@string/order_action"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.923"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtQuantity"
        android:layout_width="35dp"
        android:layout_height="19dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="240dp"
        android:fontFamily="@font/convergence"
        android:textColor="@color/letters"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@id/btnPlus"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/btnMinus"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnPlus"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/circle_button_background"
        android:contentDescription="@string/desc_floating"
        android:src="@drawable/ic_add"
        app:layout_constraintEnd_toStartOf="@id/btnMakeOrders"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnMinus"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="236dp"
        android:background="@drawable/circle_button_background"
        android:contentDescription="@string/desc_floating"
        android:src="@drawable/ic_remove"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iconDelete"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/desc_floating"
        android:src="@drawable/ic_delete"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>