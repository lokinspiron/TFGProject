<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor2"
    tools:context="com.example.tfgproject.view.LoginScreen">

    <ImageView
        android:id="@+id/imgLogo4"
        android:layout_width="179dp"
        android:layout_height="125dp"
        app:layout_constraintBottom_toTopOf="@+id/bkgLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.004"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_dstock" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bkgLogin"
        android:layout_width="414dp"
        android:layout_height="0dp"
        android:background="@drawable/roundrectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".78"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="307dp"
            android:layout_height="81dp"
            android:fontFamily="@font/convergence"
            android:text="Iniciar Sesión"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtInformation"
            app:layout_constraintVertical_bias="0.578" />

        <TextView
            android:id="@+id/txtInformation"
            android:layout_width="390dp"
            android:layout_height="55dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/convergence"
            android:text="Iniciar Sesión"
            android:textAlignment="center"
            android:textColor="@color/backgroundColor2"
            android:textSize="45sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.64"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="o"
            android:textColor="@color/backgroundColor2"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnLogin"
            app:layout_constraintVertical_bias="0.087" />

        <ImageView
            android:id="@+id/bkgCircle"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:src="@drawable/circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtO"
            app:layout_constraintVertical_bias="0.389" />

        <ImageView
            android:id="@+id/imgGoogle"
            android:layout_width="50dp"
            android:layout_height="72dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtO"
            app:layout_constraintVertical_bias="0.365"
            app:srcCompat="@drawable/logo_google" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edtEmails"
            android:layout_width="368dp"
            android:layout_height="66dp"
            android:hint="@string/email"
            android:textColorHint="@color/backgroundColor3"
            android:theme="@style/TextInputLayoutStyle"
            app:boxStrokeColor="@color/backgroundColor2"
            app:boxStrokeWidthFocused="4dp"
            app:counterTextColor="@color/color_Focused"
            app:hintTextColor="@color/buttons"
            app:layout_constraintBottom_toTopOf="@+id/edtPasswords"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtInformation"
            app:layout_constraintVertical_bias="0.567"
            app:startIconDrawable="@drawable/ic_email"
            app:startIconTint="@color/backgroundColor3">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/convergence"
                android:inputType="text|textEmailAddress"
                android:paddingStart="48dp"
                android:shadowColor="@color/color_Focused"
                android:textColor="@color/color_Focused"
                android:textColorHighlight="@color/buttons"
                android:textColorHint="@color/buttons"
                android:textColorLink="@color/color_Focused"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edtPasswords"
            android:layout_width="368dp"
            android:layout_height="66dp"
            android:hint="@string/password"
            android:textColorHint="@color/backgroundColor3"
            app:boxBackgroundColor="@color/backgroundColor1"
            app:boxStrokeColor="@color/buttons"
            app:counterTextColor="@color/color_Focused"
            app:cursorColor="@color/color_Focused"
            app:layout_constraintBottom_toTopOf="@+id/btnLogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtInformation"
            app:layout_constraintVertical_bias="0.663"
            app:startIconDrawable="@drawable/ic_lock"
            app:startIconTint="@color/backgroundColor3">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/convergence"
                android:paddingStart="48dp"
                android:password="true"
                android:shadowColor="@color/backgroundColor1"
                android:textColor="@color/backgroundColor3"
                android:textColorHighlight="@color/buttons"
                android:textColorHint="@color/backgroundColor3"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txtDstock"
        android:layout_width="192dp"
        android:layout_height="56dp"
        android:fontFamily="@font/convergence"
        android:text="DStock"
        android:textAlignment="center"
        android:textColor="@color/letters"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/bkgLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.866"
        app:layout_constraintStart_toStartOf="@+id/imgLogo4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49" />

</androidx.constraintlayout.widget.ConstraintLayout>