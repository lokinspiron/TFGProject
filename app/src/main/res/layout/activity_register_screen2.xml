<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor2"
    tools:context="com.inventory.tfgproject.RegisterScreenInfo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bkgLogin"
        android:layout_width="412dp"
        android:layout_height="700dp"
        android:background="@drawable/roundrectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".78"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/txtProfilePhoto"
            android:layout_width="87dp"
            android:layout_height="84dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/convergence"
            android:shadowColor="@color/backgroundColor1"
            android:text="Foto de perfil:"
            android:textColor="@color/backgroundColor2"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAddress" />

        <EditText
            android:id="@+id/edtAddress"
            android:layout_width="244dp"
            android:layout_height="48dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_address"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="@string/address"
            android:inputType="textEmailAddress"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.952"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="298dp" />

        <EditText
            android:id="@+id/edtBirthday"
            android:layout_width="244dp"
            android:layout_height="48dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="@string/birthday"
            android:inputType="textEmailAddress"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.952"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtInformation" />

        <TextView
            android:id="@+id/txtBirthday"
            android:layout_width="138dp"
            android:layout_height="61dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/convergence"
            android:shadowColor="@color/backgroundColor1"
            android:text="Fecha de nacimiento:"
            android:textColor="@color/backgroundColor2"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtInformation" />

        <TextView
            android:id="@+id/txtPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:fontFamily="@font/convergence"
            android:shadowColor="@color/backgroundColor1"
            android:text="Móvil:"
            android:textColor="@color/backgroundColor2"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/edtPhone"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="232dp" />

        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/convergence"
            android:shadowColor="@color/backgroundColor1"
            android:text="Dirección:"
            android:textColor="@color/backgroundColor2"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/edtAddress"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPhone" />

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="244dp"
            android:layout_height="48dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="@string/phone"
            android:inputType="textEmailAddress"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.952"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtInformation" />

        <TextView
            android:id="@+id/txtInformation"
            android:layout_width="339dp"
            android:layout_height="88dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/convergence"
            android:text="Información Adicional"
            android:textAlignment="center"
            android:textColor="@color/backgroundColor2"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="194dp"
            android:layout_height="63dp"
            android:fontFamily="@font/convergence"
            android:text="Continuar"
            android:textSize="29sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toEndOf="@+id/btnCancelar"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="543dp" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="194dp"
            android:layout_height="63dp"
            android:backgroundTint="@color/backgroundColor3"
            android:drawable="@drawable/oval"
            android:fontFamily="@font/convergence"
            android:text="Omitir"
            android:textColor="@color/backgroundColor2"
            android:textColorLink="@color/backgroundColor3"
            android:textSize="29sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.055"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="543dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>