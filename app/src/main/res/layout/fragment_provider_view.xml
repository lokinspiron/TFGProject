<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp">

    <ProgressBar
        android:id="@+id/pbProvider"
        style="?android:attr/progressBarStyle"
        android:layout_width="290dp"
        android:layout_height="306dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scViewProvider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <ImageButton
                    android:id="@+id/imgBtnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:background="@color/backgroundColor2"
                    android:contentDescription="@string/desc_floating"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="@color/black" />

                <ImageView
                    android:id="@+id/imgEditProduct"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/desc_floating"
                    app:srcCompat="@drawable/ic_edit"
                    app:tint="@color/black" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="243dp"
                android:layout_height="206dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/desc_floating"
                app:srcCompat="@drawable/logo_dstock" />

            <TextView
                android:id="@+id/txtNameProvider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/convergence"
                android:textColor="@color/letters"
                android:textSize="35sp"
                android:textStyle="bold"
                android:text="@string/name_provider" />

            <LinearLayout
                android:id="@+id/lltInformacionProducto"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lltAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="2dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/convergence"
                        android:text="@string/address_provider"
                        android:textColor="@color/letters"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtAddressProvider"
                        android:layout_width="119dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/convergence"
                        android:gravity="end"
                        android:textColor="@color/letters"
                        android:textSize="22sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lltEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:weightSum="1"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="16dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/convergence"
                        android:text="@string/email_provider"
                        android:textColor="@color/letters"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="199dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/convergence"
                        android:gravity="end"
                        android:textColor="@color/letters"
                        android:textSize="22sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lltPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="20dp"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/convergence"
                        android:text="@string/phone_provider"
                        android:textColor="@color/letters"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtPhone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/convergence"
                        android:textColor="@color/letters"
                        android:gravity="end"
                        android:textSize="25sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lltProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="20dp"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/convergence"
                        android:text="@string/products_"
                        android:textColor="@color/letters"
                        android:textSize="25sp"
                        android:textStyle="bold"/>

                    <Spinner
                        android:id="@+id/spinnerProduct"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/convergence"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/letters"
                        android:gravity="end"
                        android:textSize="25sp">
                    </Spinner>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lltCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="20dp"
                    android:weightSum="1"
                    android:orientation="horizontal"/>

                <LinearLayout
                    android:id="@+id/lltBtnProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="20dp"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnLookProduct"
                        style="@style/NormalButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/look_product"
                        android:fontFamily="@font/convergence"
                        android:textSize="20sp">

                    </Button>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnMakeOrder"
                style="@style/NormalButton"
                android:layout_width="380dp"
                android:layout_height="52dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="@string/make_order"
                android:fontFamily="@font/convergence"
                android:textSize="20sp"/>

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/pbViewProduct"
        style="?android:attr/progressBarStyle"
        android:layout_width="290dp"
        android:layout_height="306dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>