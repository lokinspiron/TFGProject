<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor2"
    tools:context="com.example.tfgproject.RegisterScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bkgLogin"
        android:layout_width="412dp"
        android:layout_height="700dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/roundrectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".78"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/bkgCircle2"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:layout_marginBottom="22dp"
            android:src="@drawable/circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imgGoogle2"
            android:layout_width="50dp"
            android:layout_height="72dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.365"
            app:srcCompat="@drawable/logo_google" />

        <TextView
            android:id="@+id/txtInformation"
            android:layout_width="399dp"
            android:layout_height="61dp"
            android:fontFamily="@font/convergence"
            android:text="Regístrate"
            android:textAlignment="center"
            android:textColor="@color/backgroundColor2"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.352"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.024" />

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="307dp"
            android:layout_height="81dp"
            android:fontFamily="@font/convergence"
            android:text="Continuar"
            android:textSize="35sp"
            app:layout_constraintBottom_toTopOf="@+id/bkgCircle2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtPasswordConfirm"
            app:layout_constraintVertical_bias="0.38" />

        <TextView
            android:id="@+id/txtOrRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/convergence"
            android:text="o regístrate con"
            android:textColor="@color/backgroundColor2"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnContinue"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/edtName"
            android:layout_width="244dp"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="12dp"
            android:ems="10"
            android:fontFamily="@font/convergence"
            android:hint="Nombre"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/letters"
            android:textColorHint="@color/letters"
            app:layout_constraintBottom_toTopOf="@+id/edtSurname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.615"
            app:layout_constraintStart_toEndOf="@+id/txtName"
            app:layout_constraintTop_toBottomOf="@+id/txtInformation"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/edtSurname"
            android:layout_width="244dp"
            android:layout_height="48dp"
            android:layout_marginTop="112dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="12dp"
            android:ems="10"
            android:fontFamily="@font/convergence"
            android:hint="Apellido"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/letters"
            android:textColorHint="@color/letters"
            app:layout_constraintBottom_toTopOf="@+id/edtEmail2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtSurname"
            app:layout_constraintTop_toBottomOf="@+id/txtInformation"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/edtEmail2"
            android:layout_width="244dp"
            android:layout_height="48dp"
            android:layout_marginTop="184dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="12dp"
            android:ems="10"
            android:fontFamily="@font/convergence"
            android:hint="Correo"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/letters"
            android:textColorHint="@color/letters"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.593"
            app:layout_constraintStart_toEndOf="@+id/txtEmail"
            app:layout_constraintTop_toBottomOf="@+id/txtInformation" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/convergence"
            android:shadowColor="@color/backgroundColor1"
            android:text="Correo:"
            android:textColor="@color/backgroundColor2"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtSurname" />

        <EditText
            android:id="@+id/edtContraseña"
            android:layout_width="244dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="12dp"
            android:ems="10"
            android:fontFamily="@font/convergence"
            android:hint="Contraseña"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:password="true"
            android:textColor="@color/letters"
            android:textColorHint="@color/letters"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.193"
            app:layout_constraintStart_toEndOf="@+id/txtPassword"
            app:layout_constraintTop_toBottomOf="@+id/edtEmail2"
            app:layout_constraintVertical_bias="0.036" />

        <EditText
            android:id="@+id/edtPasswordConfirm"
            android:layout_width="244dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="12dp"
            android:ems="10"
            android:fontFamily="@font/convergence"
            android:hint="Confirma Contraseña"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:password="true"
            android:textColor="@color/letters"
            android:textColorHint="@color/letters"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/txtConfirmPassword"
            app:layout_constraintTop_toBottomOf="@+id/edtContraseña"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/convergence"
            android:shadowColor="@color/backgroundColor1"
            android:text="Nombre(s):"
            android:textColor="@color/backgroundColor2"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/txtSurname"
            app:layout_constraintEnd_toStartOf="@+id/edtName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtInformation"
            app:layout_constraintVertical_bias="0.56" />

        <TextView
            android:id="@+id/txtSurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="196dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/convergence"
            android:shadowColor="@color/backgroundColor1"
            android:text="Apellido(s):"
            android:textColor="@color/backgroundColor2"
            android:textSize="22sp"
            app:layout_constraintEnd_toStartOf="@+id/edtSurname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/convergence"
            android:shadowColor="@color/backgroundColor1"
            android:text="Contraseña:"
            android:textColor="@color/backgroundColor2"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtEmail"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txtConfirmPassword"
            android:layout_width="146dp"
            android:layout_height="55dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/convergence"
            android:shadowColor="@color/backgroundColor1"
            android:text="Confirmar Contraseña:"
            android:textColor="@color/backgroundColor2"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.025"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPassword"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left" />
</androidx.constraintlayout.widget.ConstraintLayout>