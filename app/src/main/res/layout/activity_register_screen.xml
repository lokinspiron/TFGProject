<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor2"
    tools:context="com.inventory.tfgproject.view.RegisterScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bkgLogin"
        android:layout_width="0dp"
        android:layout_height="700dp"
        android:layout_marginTop="147dp"
        android:background="@drawable/roundrectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".78"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/bkgCircle2"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:layout_marginBottom="22dp"
            android:src="@drawable/circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imgGoogle2"
            android:layout_width="50dp"
            android:layout_height="72dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.365"
            app:srcCompat="@drawable/logo_google" />

        <TextView
            android:id="@+id/txtInformation"
            android:layout_width="399dp"
            android:layout_height="61dp"
            android:fontFamily="@font/convergence"
            android:text="Regístrate"
            android:textAlignment="center"
            android:textColor="@color/backgroundColor2"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.352"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.024" />

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="307dp"
            android:layout_height="81dp"
            android:fontFamily="@font/convergence"
            android:text="Continuar"
            android:textSize="35sp"
            app:layout_constraintBottom_toTopOf="@+id/bkgCircle2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtPasswordConfirm"
            app:layout_constraintVertical_bias="0.38" />

        <TextView
            android:id="@+id/txtOrRegister"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/convergence"
            android:text="o regístrate con"
            android:textColor="@color/backgroundColor2"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnContinue"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="244dp"
            android:layout_height="48dp"
            android:layout_marginTop="184dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="12dp"
            android:ems="10"
            android:fontFamily="@font/convergence"
            android:hint="Correo"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/letters"
            android:textColorHint="@color/letters"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.593"
            app:layout_constraintStart_toEndOf="@+id/txtEmail"
            app:layout_constraintTop_toBottomOf="@+id/txtInformation" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/convergence"
            android:shadowColor="@color/backgroundColor1"
            android:text="Correo:"
            android:textColor="@color/backgroundColor2"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtSurname" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="244dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="12dp"
            android:ems="10"
            android:fontFamily="@font/convergence"
            android:hint="Contraseña"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:password="true"
            android:textColor="@color/letters"
            android:textColorHint="@color/letters"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.193"
            app:layout_constraintStart_toEndOf="@+id/txtPassword"
            app:layout_constraintTop_toBottomOf="@+id/edtEmail"
            app:layout_constraintVertical_bias="0.036" />

        <EditText
            android:id="@+id/edtPasswordConfirm"
            android:layout_width="244dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="12dp"
            android:ems="10"
            android:fontFamily="@font/convergence"
            android:hint="Confirma Contraseña"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:password="true"
            android:textColor="@color/letters"
            android:textColorHint="@color/letters"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/txtConfirmPassword"
            app:layout_constraintTop_toBottomOf="@+id/edtPassword"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/convergence"
            android:shadowColor="@color/backgroundColor1"
            android:text="Nombre(s):"
            android:textColor="@color/backgroundColor2"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/txtSurname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.058"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtInformation"
            app:layout_constraintVertical_bias="0.541" />

        <TextView
            android:id="@+id/txtSurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="196dp"
            android:fontFamily="@font/convergence"
            android:shadowColor="@color/backgroundColor1"
            android:text="Apellido(s):"
            android:textColor="@color/backgroundColor2"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/convergence"
            android:shadowColor="@color/backgroundColor1"
            android:text="Contraseña:"
            android:textColor="@color/backgroundColor2"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtEmail"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txtConfirmPassword"
            android:layout_width="125dp"
            android:layout_height="54dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/convergence"
            android:shadowColor="@color/backgroundColor1"
            android:text="Confirmar Contraseña:"
            android:textColor="@color/backgroundColor2"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.022"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPassword"
            app:layout_constraintVertical_bias="0.015" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nameRegisterContainer"
            android:layout_width="262dp"
            android:layout_height="76dp"
            app:helperText="@string/required"
            app:helperTextTextColor="@android:color/holo_red_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.888"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.17">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtNameRegister"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/name"
                android:textSize="20sp"
                android:inputType="textCapCharacters"
                android:lines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/surnameRegisterContainer"
            android:layout_width="262dp"
            android:layout_height="76dp"
            app:helperText="@string/required"
            app:helperTextTextColor="@android:color/holo_red_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.892"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.291">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtSurnameRegister"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/surname"
                android:inputType="textCapCharacters"
                android:lines="1"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>