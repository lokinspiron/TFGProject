<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/backgroundColor1</item>
        <item name="colorPrimaryVariant">@color/backgroundColor2</item>
        <item name="colorOnPrimary">@color/backgroundColor3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_Focused</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor" tools:ignore="PrivateResource">@color/mtrl_textinput_default_box_stroke_color</item>
        <item name="backgroundColor">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>

        <item name="hintTextColor">@color/backgroundColor1</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <item name="android:textColorHint">@color/letters</item>
    </style>

    <style name="TextInputLayoutStyle2" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor" tools:ignore="PrivateResource">@color/text_input_box_stroke</item>
        <item name="backgroundColor">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>

        <item name="hintTextColor">@color/color_Focused</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <item name="android:textColorHint">@color/letters</item>
    </style>

    <style name="TextInputLayoutStyle3" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor" tools:ignore="PrivateResource">@color/mtrl_textinput_default_box_stroke_color</item>
        <item name="backgroundColor">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>

        <item name="hintTextColor">@color/backgroundColor2</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <item name="android:textColorHint">@color/letters</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:fontFamily">@font/convergence</item>
    </style>

    <style name="MyTextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:textColor">@color/color_Focused</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/letters</item>
    </style>

    <style name="RedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/btn_red_shape</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/convergence</item>
    </style>
    <style name="NormalButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/btn_shape</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/letters</item>
        <item name="android:fontFamily">@font/convergence</item>
    </style>

    <style name="AlternativeButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/btn_alternative_shape</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/letters</item>
        <item name="android:fontFamily">@font/convergence</item>
    </style>
</resources>